@model LoginViewModel
@{
    ViewData["Title"] = "Вход";
}

<h2 class="text-center">Вход</h2>
<form asp-action="Login" asp-controller="Account" asp-antiforgery="true" method="post">
    <div class="is-valid" asp-validation-summary="ModelOnly"></div>
    <div>
        <input  type="hidden" asp-for="ReturnUrl"/>
        <div class="col-sm-10 col-md-6 col-lg-4">
            <label asp-for="Email">Электронная почта</label>
            <input class="form-control" asp-for="Email" type="text"/>
            <span asp-validation-for="Email"></span>
        </div>
        <div class="col-sm-10 col-md-6 col-lg-4">
            <label  asp-for="Password">Пароль</label>
            <input class="form-control" asp-for="Password" type="password"/>
            <span asp-validation-for="Password"></span>
        </div>
        <br/>
        <div>
            <button type="submit" class="btn btn-primary mb-3">Войти</button>
        </div>
    </div>
</form>


@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
