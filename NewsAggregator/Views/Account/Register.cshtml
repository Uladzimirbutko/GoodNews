@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2>Регистрация</h2>
<form asp-action="Register" asp-controller="Account" asp-antiforgery="true" method="post">
    <div class="is-valid" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-content">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" type="text" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-content">
            <label asp-for="Password">Password</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password"></span>
        </div>
        <div class="form-content">
            <label asp-for="PasswordConfirmation">Confirm Password</label>
            <input asp-for="PasswordConfirmation" type="password" />
            <span asp-validation-for="PasswordConfirmation"></span>
        </div>
        <div>
            <input type="submit" value="Register" />
        </div>

    </div>
</form>


@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
