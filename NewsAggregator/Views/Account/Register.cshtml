@model RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<h2 class="text-center">Регистрация</h2>
<div>
    <form asp-action="Register" asp-controller="Account" asp-antiforgery="true" method="post">
        <div class="validation" asp-validation-summary="ModelOnly"></div>
        <div>
            <div class="col-sm-10 col-md-6 col-lg-4">
                <label asp-for="Email">Email</label>
                <input class="form-control" asp-for="Email" type="text" placeholder="name@example.com" />
                <span asp-validation-for="Email"></span>
            </div>
            <div class="col-sm-10 col-md-6 col-lg-4">
                <label asp-for="Password">Введите пароль.</label>
                <input class="form-control" asp-for="Password" type="password" placeholder="password***" />
                <span asp-validation-for="Password"></span>
            </div>
            <div class="col-sm-10 col-md-6 col-lg-4">
                <label asp-for="PasswordConfirmation">Повторите пароль.</label>
                <input class="form-control" asp-for="PasswordConfirmation" type="password" placeholder="password***" />
                <span asp-validation-for="PasswordConfirmation"></span>
            </div>
            <div class="col-sm-10 col-md-6 col-lg-4">
                <label asp-for="Age">Введите свой возраст.</label>
                <input class="form-control" asp-for="Age" type="number" placeholder="доступ 18-99 лет" />
                <span asp-validation-for="Age"></span>
            </div>
            <div class="col-sm-10 col-md-6 col-lg-4">
                <label asp-for="FullName">Введите ваше полное имя.</label>
                <input class="form-control" asp-for="FullName" type="text" placeholder="Гэндальф Серый" />
                <span asp-validation-for="Age"></span>
            </div>
            <br/>
            <div>
                <button type="submit" class="btn btn-primary mb-3">Зарегистрироваться</button>
            </div>

        </div>
    </form>
</div>

@section Scripts
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
